  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "let token = pm.environment.get('access_token');",
          "if (token) {",
          "    pm.sendRequest({",
          "        url: pm.environment.get('base_url') + '/api/v1/auth/refresh',",
          "        method: 'POST',",
          "        header: {",
          "            'Authorization': 'Bearer ' + token,",
          "            'Accept': 'application/json'",
          "        }",
          "    }, function(err, res) {",
          "        if (!err && res.code === 200) {",
          "            let data = res.json();",
          "            pm.environment.set('access_token', data.access_token);",
          "            console.log('Access token refreshed:', data.access_token);",
          "        } else {",
          "            console.log('Token refresh failed or expired');",
          "        }",
          "    });",
          "} else {",
          "    console.log('No access token found, skipping refresh');",
          "}"
        ]
      }
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://127.0.0.1:8000" },
    { "key": "access_token", "value": "" },
    { "key": "productId", "value": "1" },
    { "key": "orderId", "value": "1" }
  ]
